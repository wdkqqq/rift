{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Rift",
  "version": "0.1.0",
  "identifier": "me.wdkq.rift",
  "build": {
    "beforeDevCommand": "bun dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "Rift",
        "width": 1200,
        "height": 720,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "trafficLightPosition": {
          "x": 8,
          "y": 18
        }
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        "fs-cache"
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "app",
      "appimage",
      "msi",
      "nsis"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
