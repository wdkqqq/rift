{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "rift",
  "version": "0.1.0",
  "identifier": "me.wdkq.rift",
  "build": {
    "beforeDevCommand": "pnpm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Rift",
        "width": 1200,
        "height": 720
      }
    ],
    "security": {
      "csp": null,
      "capabilities": ["fs-cache"]
    }
  },
  "bundle": {
    "active": true,
    "targets": ["deb", "rpm"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
